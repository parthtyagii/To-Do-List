        <form action="/register" method="post">
            <div class="credentials mb-3">
                Sign-Up
            </div>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" class="form-control" id="username" aria-describedby="emailHelp"
                    required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" class="form-control" aria-describedby="emailHelp" id="password"
                    required>
            </div>
            <button type="submit" id="signupbtn" class="btn btn-primary">Submit</button>
            <div class="mt-3 form-label" id="question">Already registered? <a href="/login">login</a></div>
        </form>
